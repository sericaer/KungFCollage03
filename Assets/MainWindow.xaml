  d:DataContext="{d:DesignInstance {x:Type local:ViewModel}, IsDesignTimeCreatable=True}">
     <DockPanel>
        <Border DockPanel.Dock="Top" Style="{StaticResource BlueBorder}">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">
                    <Button Width="150" Height="40">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames  Storyboard.TargetName="centerPanel" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0"  Value="{x:Static Visibility.Visible}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <Int32AnimationUsingKeyFrames Duration="0" Storyboard.TargetName="centerPanel" Storyboard.TargetProperty="SelectedIndex">
                                            <DiscreteInt32KeyFrame KeyTime="0" Value="0" />
                                        </Int32AnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                    <Button Width="150" Height="40">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames  Storyboard.TargetName="centerPanel" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0"  Value="{x:Static Visibility.Visible}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <Int32AnimationUsingKeyFrames Duration="0" Storyboard.TargetName="centerPanel" Storyboard.TargetProperty="SelectedIndex">
                                            <DiscreteInt32KeyFrame KeyTime="0" Value="1" />
                                        </Int32AnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                    <Button Width="150" Height="40">123</Button>
                </StackPanel>
                <Button Width="120" Height="150" HorizontalAlignment="Left">12345</Button>
            </StackPanel>
        </Border>
        <Border DockPanel.Dock="Bottom" Height="40" Style="{StaticResource BlueBorder}">
            <StackPanel Orientation="Horizontal">
                <Button HorizontalAlignment="Left" >Button Middle</Button>
            </StackPanel>
        </Border>
        <Border DockPanel.Dock="Left" Style="{StaticResource BlueBorder}">
            <StackPanel Name="dataPanel" Grid.Row="1" Margin="0,60,0,0" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left">
                <StackPanel Name="buildingDataPanel" Width="280">
                    <Label Foreground="Black" Background="#FF7C7C7C" HorizontalContentAlignment="Center">12345</Label>
                    <Button>abcde</Button>
                    <Button>abcde</Button>
                    <Button>abcde</Button>
                    <Button>abcde</Button>
                </StackPanel>
                <Button Name ="dataPanelHiddeButton" Width="30" Height="30" VerticalAlignment="Top">
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.Click">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ObjectAnimationUsingKeyFrames  Storyboard.TargetName="dataPanel" Storyboard.TargetProperty="Visibility">
                                        <DiscreteObjectKeyFrame KeyTime="0:0:0"  Value="{x:Static Visibility.Hidden}"/>
                                    </ObjectAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>
            </StackPanel>
        </Border>
        <Border DockPanel.Dock="Right" Style="{StaticResource BlueBorder}">
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0">
                <Slider Maximum="100" Width="200"></Slider>
                <Slider Maximum="100" Width="200"></Slider>
            </StackPanel>
        </Border>
